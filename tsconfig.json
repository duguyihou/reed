{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "typeRoots": ["./src/types"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "components/*": ["src/components/*"],
      "routes/*": ["src/routes/*"],
      "providers/*": ["src/providers/*"],
      "features/*": ["src/features/*"],
      "screens/*":["src/screens/*"],
      "types/*":["src/types/*"],
      "shared/*":["src/shared/*"],
      "utils/*":["src/utils/*"],
      "assets/*":["src/assets/*"]
    }
  }
}
